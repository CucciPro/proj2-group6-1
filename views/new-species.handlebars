<form id="new-species-form">

    <div>
        <label class="form-label" for="species_common">Common Name</label>
        <input type="text" name="species_common" autofocus maxlength="100" required />
    </div>
    <div>
        <label class="form-label" for="species_botanical">Botanical Name</label>
        <input type="text" name="species_botanical" maxlength="100" required />
    </div>
    {{!-- <div>
        <label class="form-label" for="species_type">Type</label>


<form id="new-plant-history">
    <input type="hidden" name="plant_id" value="{{plantData.plant_id}}" />
    <div>
        <label class="form-label" for="rec_type">Type</label>
        <input type="text" name="rec_type" autofocus maxlength="100" required />
    </div>
    <div>
        <label class="form-label" for="loc">Location</label>
        <input type="text" name="loc" required/>
    </div>
    <div>
        <label class="form-label" for="in_ground">In ground?</label>
        <select name="in_ground">
            
            <option value="1"> Yes </option>
            <option value="0"> No </option>
            
        </select>
    </div>
    <div>
        <label class="form-label" for="direct_sunlight_hours">Sunlight Hours</label>
        <input type="text" name="direct_sunlight_hours" maxlength="100" required />
    </div>
    <div>
        <label class="form-label" for="watering_schedule">Watering Schedule</label>
        <input type="number" name="watering_schedule" required />
    </div>
    <div>
        <label class="form-label" for="additional_info">Additional Info</label>
        <textarea name="additional_info" maxlength="500" required></textarea>
    </div>
    <div>
        <button type="submit">Create</button>
    </div>

</form>

<script src="/javascript/new-plant-history.js"></script>